<launch>

  <!-- <arg name="no_static_map" default="false"/> -->
  <arg name="no_static_map" default="true"/>

  <arg name="base_global_planner" default="navfn/NavfnROS"/>
  <arg name="base_local_planner" default="dwa_local_planner/DWAPlannerROS"/>
  <!-- <arg name="base_local_planner" default="base_local_planner/TrajectoryPlannerROS"/> -->

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

    <param name="base_global_planner" value="$(arg base_global_planner)"/>
    <param name="base_local_planner" value="$(arg base_local_planner)"/>
    <rosparam file="$(find jsk_footstep_planner)/config/planner.yaml" command="load"/>

    <!-- observation sources located in costmap_common.yaml -->
    <rosparam file="$(find jsk_footstep_planner)/config/costmap_common.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find jsk_footstep_planner)/config/costmap_common.yaml" command="load" ns="local_costmap" />

    <!-- local costmap, needs size -->
    <rosparam file="$(find jsk_footstep_planner)/config/costmap_local.yaml" command="load" ns="local_costmap" />
    <param name="local_costmap/width" value="4.0"/>
    <param name="local_costmap/height" value="4.0"/>

    <!-- static global costmap, static map provides size -->
    <rosparam file="$(find jsk_footstep_planner)/config/costmap_global_static.yaml" command="load" ns="global_costmap" unless="$(arg no_static_map)"/>

    <!-- global costmap with pointcloud, for odom_navigation_demo -->
    <rosparam file="$(find jsk_footstep_planner)/config/costmap_global_pointcloud.yaml" command="load" ns="global_costmap" if="$(arg no_static_map)"/>
    <param name="global_costmap/width" value="10.0" if="$(arg no_static_map)"/>
    <param name="global_costmap/height" value="10.0" if="$(arg no_static_map)"/>
  </node>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find jsk_footstep_planner)/config/jaxon_move_base.rviz" output="screen"/>

</launch>
